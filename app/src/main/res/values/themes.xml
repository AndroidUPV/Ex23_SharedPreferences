<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Ex23_SharedPreferences" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="toolbarStyle">@style/Style.App.Toolbar</item>
        <item name="appBarLayoutStyle">@style/Style.App.AppBarLayout</item>
    </style>

    <!--Style for the custom AppBarLayout-->
    <style name="Style.App.AppBarLayout" parent="Widget.MaterialComponents.AppBarLayout.Primary" />

    <!--Style for the custom Toolbar-->
    <style name="Style.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <!--ThemeOverlay for the custom Toolbar-->
    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.Ex23_SharedPreferences" parent="Base.Theme.Ex23_SharedPreferences" />
</resources>